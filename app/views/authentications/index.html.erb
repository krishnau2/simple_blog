<%= link_to 'Home', "/" %>
<h3>Listing Users</h3>

<table>
  <tr>
    <th>Date</th>
    <th>Name</th>
    <th>Category</th>
    <th>User Id</th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.created_at.strftime('%d-%m-%Y') %> </td>
        <td><%= user.name %></td>
        <td><%= user.category %></td>
        <td><%= user.uid %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>