<%= link_to 'Home', "/" %>
<h1><%= @current_user %>'s Page</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Name</th>
    <th>Topic</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
      <% @current_user_post.each do |post| %>
          <tr>
            <td><%= post.created_at.strftime('%d-%m-%Y') %> </td>
            <td><%= @user_name.get_user_name(post.name_id)%></td>
            <td><%= post.topic %></td>
            <td><%= post.content %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
      <% end %>
</table>

<br/>

<%= link_to 'New Post', new_post_path %>
