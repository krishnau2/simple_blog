<p id="notice"><%= notice %></p>
<p>
  <b>Date:</b>
  <%= @post.created_at.strftime("%d-%m-%Y") %>
</p>
<p>
  <b>Name:</b>
  <%= User.find(@post.name_id).name %>
</p>

<p>
  <b>Topic:</b>
  <%= @post.topic %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<% if @post.attachment_file_name %>
    <p>
      <b>Attachments: </b>
      <%= link_to @post.attachment_file_name, @post.attachment.url %>
    </p>
<% end %>

<h2>New Comments:</h2>
<%= render "comments/form" %>
<% @comment_list = @post.comments %>
<!--For eleminating the last nil value in the array.-->
<% @comment_list.pop %>
<h2>Comments</h2>
<%= render :partial    => "comments/comment",
           :collection => @comment_list %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
