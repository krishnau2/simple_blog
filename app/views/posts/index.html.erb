<h1>Welcome to WACS Blog</h1>
<%= link_to 'Home', "/" %>
<h3>Listing posts</h3>

<table>
  <tr>
    <th>Date</th>
    <th>Name</th>
    <th>Topic</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.created_at.strftime('%d-%m-%Y') %> </td>
    <td><%= post.name %></td>
    <td><%= post.topic %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
