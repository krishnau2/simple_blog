<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || "WACS" %>   </title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="header">
  <div id="logo">
    <h1><%= link_to "WACS", "/" %></h1>

    <p><em> Web-enabled Content System</em></p>
  </div>
  <hr/>
  <!-- end #logo -->
  <div id="menu">
    <ul>
      <li><%= link_to "Home", "/home" %></li>
      <li class="current_page_item"><%= link_to "Blog", posts_path %></li>
      <li><a href="#">Contact</a></li>
      <% if session[:login_status] == "loggedIn" %>
          <li><%= link_to 'Logout', '/logout' %></li>
      <% else %>
          <li> <%= link_to 'Login', "/auth/facebook" %></li>
      <% end %>
    </ul>
  </div>
</div>
<div id="wrapper">
  <div id="wrapper-bgtop">
    <div id="page">


      <%= flash[:notice] %>
      <%= yield %>
    </div>
  </div>
</div>

<div id="footer-bgcontent">
  <div id="footer">
    <p>Copyright &copy; 2011. All rights reserved. Design by</p>
  </div>
</div>
</body>
</html>
